@page "/"
@inject IArticleService _articleService;
@model IndexModel
@{
    ViewData["Title"] = "SnippetizR";
    var _snippets = await _articleService.GetArticleList();
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Here are the current snippets</p>
</div>

<div id="snippets" class="container">
    <div class="row">
        @foreach (var snippet in _snippets)
        {
            <div class="col-sm-5 col-md-4 col-lg-3 snippet">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@snippet.Title</h5>
                    </div>
                    <div class="card-footer small">
                        <a href="#" class="card-link">@snippet.Category</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

